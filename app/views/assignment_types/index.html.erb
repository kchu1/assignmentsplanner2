<div>
  <div>
    <h1>
      List of all assignment types
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new assignment type
    </h2>

    <form action="/insert_assignment_type" method="post">
      <div>
        <label for="assignment_type_box">
          Assignment type
        </label>

        <input type="text" id="assignment_type_box" name="query_assignment_type">
      </div>

      <button>
        Create assignment type
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
      

        <th>
          Assignment type
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_assignment_types.each do |an_assignment_type| %>
      <tr>
        <td>
          <%= an_assignment_type.id %>
        </td>

        <td>
          <%= an_assignment_type.assignment_type %>
        </td>

        <td>
          <%= time_ago_in_words(an_assignment_type.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(an_assignment_type.updated_at) %> ago
        </td>

        <td>
          <a href="/assignment_types/<%= an_assignment_type.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
