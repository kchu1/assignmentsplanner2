<div>
  <div>
    <h1>
      Assignment type #<%= @the_assignment_type.id %> details
    </h1>

    <div>
      <div>
        <a href="/assignment_types">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_assignment_type/<%= @the_assignment_type.id %>">
          Delete assignment type
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Assignment type
      </dt>
      <dd>
        <%= @the_assignment_type.assignment_type %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_assignment_type.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@the_assignment_type.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2>
      Edit assignment type
    </h2>

    <form action="/modify_assignment_type/<%= @the_assignment_type.id %>"  method="post" >
      <div>
        <label for="assignment_type_box">
          Assignment type
        </label>

        <input type="text" id="assignment_type_box" name="query_assignment_type" value="<%= @the_assignment_type.assignment_type %>">
      </div>

      <button>
        Update assignment type
      </button>
    </form>
  </div>
</div>

<hr>
