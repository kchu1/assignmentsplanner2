<div>
  <div>
    <h1>
      List of all assignments
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new assignment
    </h2>

    
    <form action="/insert_assignment" method="post">
     <label for="query_course_id">Course</label>
     <select name="query_course_id" id="query_course_id">
  <%= @current_user.courses.each do |something|%>
 
  <option value=<%=something.id%>><%=something.name%></option>

 <%end%>
</select>
      </div>
       <label for="query_assignment_type_id">Assignment Type</label>

<select name="query_assignment_type_id" id="query_assignment_type_id">
  <%= AssignmentType.all.each do |something|%>
 
  <option value=<%=something.id%>><%=something.assignment_type%></option>
 
 
 
 <%end%>
</select>
  
</div>

      <div>
        <label for="due_box">
          Due
        </label>

        <input type="date" id="due_box" name="query_due">
      </div>

    

      <div>
        <label for="description_box">
          Description
        </label>

        <textarea id="description_box" name="query_description" rows="3"></textarea>
      </div>

      <div>
        <label for="name_box">
          Name
        </label>

        <input type="text" id="name_box" name="query_name">
      </div>

      <button>
        Create assignment
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>
        <th>
          Course
        </th>
        <th>
          Name
        </th>
        <th>
          Assignment type
        </th>
        <th>
          Description
        </th>
        <th>
          Due
        </th>
        <th>
          Completed?
        </th>
        <th>
        </th>
        
      </tr>

      <% @list_of_assignments.each do |an_assignment| %>
      <tr>
        
        <td>
          <%= an_assignment.course.name %>
        </td>
        <td>
          <%= an_assignment.name %>
        </td>
        <td>
          <%= an_assignment.assignment_type.assignment_type %>
        </td>
        <td>
          <%= an_assignment.description %>
        </td>
       
       <td>
          <%= an_assignment.due %>
        </td>
        
        <td>
      <a href="/delete_assignment/<%= an_assignment.id %>"> Yes </a>
        </td>
        <td>
          <a href="/assignments/<%= an_assignment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
    


  </div>
</div>

<hr>
